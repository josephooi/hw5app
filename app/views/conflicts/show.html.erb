<p id="notice"><%= notice %></p>

<h1>Conflict</h1>

<div class="text-center">
  <p>
    <b>Date:</b>
    <%= @conflict.date.strftime("%d %b %y") %>
  </p>

  <p>
    <b>Start:</b>
    <%= @conflict.start.strftime("%I:%M%p") %>
  </p>

  <p>
    <b>End:</b>
    <%= @conflict.end.strftime("%I:%M%p") %>
  </p>

  <p>
    <b>Reason:</b>
    <%= @conflict.reason %>
  </p>

  <p>
    <b>Type of conflict:</b>
    <%= @conflict.type_of_conflict %>
  </p>

  <p>
    <b>Singer:</b>
    <%= @conflict.singer_name %>
  </p>


  <%= link_to 'Edit', edit_conflict_path(@conflict) %> |
  <%= link_to 'Back', conflicts_path %>

</div>
